{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "importMap": "./import_map.json",
  "lint": {
    "files": {
      "include": ["./"],
      "exclude": ["./_shared/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "files": {
      "include": ["./"],
      "exclude": []
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}
